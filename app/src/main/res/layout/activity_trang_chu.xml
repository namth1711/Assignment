<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center"
    tools:context=".TrangChu">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÍ NHÂN SỰ"
        android:textSize="42sp"
        android:textStyle="bold"
        android:textColor="#D52323"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPOLY SOFTWARE COMPANY"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnPhongBan"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/ic_phongban"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="PHÒNG BAN"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnnhanVien"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/ic_nhanvien"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:textColor="#0055FF"
            android:text="NHÂN VIÊN"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnThoat"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@drawable/ic_thoat"
        android:textColor="#000"
        android:text="THOÁT"
        android:textSize="20sp"
        android:textStyle="bold"/>


</LinearLayout>