<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fff"
    android:padding="16dp"
    tools:context=".Them_Sua">
    <TextView
        android:id="@+id/txt_them_sua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Thêm Nhân Viên"
        android:gravity="center"
        android:textSize="48dp"
        android:textColor="#FF0000"/>
    <Spinner
        android:id="@+id/spin_phongban"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"/>
    <EditText
        android:id="@+id/edt_manv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        android:paddingTop="10dp"
        android:textColorHint="#5A4A4A"
        android:paddingBottom="10dp"
        android:background="@drawable/br_edt"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:hint="Mã Nhân Viên"
        />
    <EditText
        android:id="@+id/edt_hoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        android:paddingTop="10dp"
        android:textColorHint="#473D3D"
        android:paddingBottom="10dp"
        android:background="@drawable/br_edt"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:hint="Họ Tên"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sumbimt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sumbimt"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/br_btn"
        android:backgroundTint="#03A9F4"/>


</LinearLayout>